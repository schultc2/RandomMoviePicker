<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filters"
                android:id="@+id/filter_title"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:padding="20dp"
                android:textSize="50sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/filter_title"
                android:id="@+id/ss_buttons"
                android:layout_marginHorizontal="20dp">
                <ImageButton
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/netflixButton"
                    android:background="@color/background_color"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:id="@+id/netflix_filter"
                    />
                <ImageButton
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/huluButton"
                    android:background="@color/background_color"
                    android:padding="5dp"
                    android:id="@+id/hulu_filter"
                    />
                <ImageButton
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/disneyButton"
                    android:background="@color/background_color"
                    android:padding="5dp"
                    android:id="@+id/disney_filter"
                    />
                <ImageButton
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/primeButton"
                    android:background="@color/background_color"
                    android:padding="5dp"
                    android:id="@+id/prime_filter"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star_rating"
                android:id="@+id/star_rating_title"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ss_buttons"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp"
                android:textSize="30sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/star_rating_title"
                android:id="@+id/star_rating_view"
                >
                <RatingBar
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:id="@+id/from_star_rating"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/dash"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="50dp"/>
                <RatingBar
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:id="@+id/to_star_rating"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_released"
                android:id="@+id/release_year_title"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_below="@id/star_rating_view"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp"
                android:textSize="30sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/star_rating_title"
                android:id="@+id/release_year_view"
                >
                <RatingBar
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:id="@+id/from_star_rating"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/dash"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="50dp"/>
                <RatingBar
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:id="@+id/to_star_rating"
                    />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>