<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_foreground"
        android:layout_centerInParent="true"
        android:scaleX="2"
        android:scaleY="2"
        android:id="@+id/icon_img_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moviepicker"
        android:id="@+id/app_name_txt_view"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/icon_img_view"
        android:layout_marginBottom="70dp"
        android:textSize="50sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/icon_img_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/pick_a_movie"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/pick_a_movie_button"
        android:backgroundTint="@color/shade_of_black"/>

</RelativeLayout>